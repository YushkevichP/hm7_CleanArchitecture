<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_person_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MediumGoldenrod">


    <LinearLayout
        android:background="@color/LightYellow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            app:title="Rick and Morty"
            app:titleTextColor="@color/white" />

        <ImageView

            android:id="@+id/image_user_fragment"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:adjustViewBounds="false"
            android:paddingTop="20dp"
            tools:src="@color/purple_200"/>



        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="Name" />

        <TextView
            android:id="@+id/person_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="other info" />

        <TextView
            android:id="@+id/person_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="another info" />

    </LinearLayout>

</androidx.cardview.widget.CardView>